@model WebApp.Models.GrupoMaterialModel
@{
	ViewData["Title"] = "Listagem de GruposMateriais";
	Layout = "~/Views/Shared/_Layout.cshtml";
}

<div id="vGrupoMaterial">
	<div class="row">
		<div class="col-lg-12">
			<section class="panel">
				<header class="panel-heading">
					<div class="panel-actions">
						<a href="#" class="card-action card-action-toggle" data-card-toggle></a>
					</div>
					<h2 class="panel-title">Listagem de GruposMateriais</h2>
				</header>
				<div class="panel-body">
					<div class="form-group row">
						<div class="col-sm-12 pull-right">
							<a href="@Url.Action("Create", "GrupoMaterial")" id="addToTable" class="btn btn-primary pull-right"><i class="fa fa-plus"></i>&nbsp;&nbsp;Nova GrupoMaterial </a>
						</div>
					</div>
					<table class="table table-bordered table-striped mb-0" id="datatable-default">
						<thead>
							<tr>
								<th class="text-center">Id</th>
								<th class="text-center">Nome</th>
							</tr>
						</thead>
                        <tbody>
                        @foreach (var item in Model.GruposMateriais)
							{ 
								<tr>
									<td class="text-center" style="width:20px;">@Html.DisplayFor(modelItem => item.Id)</td>
									<td class="text-center">@Html.DisplayFor(modelItem => item.Nome)</td>
									
									<td class="actions text-center">
										<a data-toggle="tooltip" data-placement="top" title="Editar"
										   href='javascript:(crud.EditModal(@item.Id))'
										   class="on-default edit-row" style='color: #FF9800'>
											<i class="fa fa-pencil"></i>
										</a>
										<a data-toggle="tooltip" data-placement="top" title="Excluir" href='javascript:(crud.DeleteModal(@item.Id))'
										   class="on-default remove-row" style="GrupoMaterialr: pointer;color: #F44336"><i class="fa fa-trash"></i></a>
									</td>
								</tr>
								}
                        </tbody>
					</table>
				</div>
			</section>
		</div>
	</div>
	<!-- Modal -->
	<div class="modal fade" id="mdDeleteGrupoMaterial" tabindex="-1" role="dialog" aria-labelledby="mdDeleteGrupoMaterialLabel" aria-hidden="true">
		<div class="modal-dialog" role="document">
			<div class="modal-content">
				<div class="modal-header">
					<h5 class="modal-title" id="mdDeleteGrupoMaterialLabel">
						<i class="fa fa-trash"></i> &nbsp;&nbsp;<strong>Exclusão de GrupoMaterial</strong>
					</h5>
				</div>
				<div class="modal-body">
					<div class="modal-icon">
						<i class="fa fa-question-circle"></i>
					</div>
					<div class="modal-text">
						<input type="hidden" id="deleteGrupoMaterialId" />
						<p class="mb-0">Tem certeza que deseja <b>excluir</b> esse registro?</p>
					</div>
					<div class="modal-wrapper">
					</div>
				</div>
				<div class="modal-footer">
					<button type="submit" class="btn btn-danger pull-right" style="margin-left: 5px;" data-dismiss="modal"><i class="fa fa-thumbs-o-down"></i> &nbsp;&nbsp;Não</button>
					<a id="deleteGrupoMaterialHref" class="btn btn-success pull-right" style="margin-left: 5px;"><i class="fa fa-thumbs-o-up"></i> &nbsp;&nbsp;Sim</a>
				</div>
			</div>
		</div>
	</div>
	<!-- Modal -->
	<div class="modal fade" id="mdEditGrupoMaterial" tabindex="-1" role="dialog" aria-labelledby="mdEditGrupoMaterialLabel" aria-hidden="true">
		<div class="modal-dialog modal-md" role="document">
			<div class="modal-content">
				<div class="modal-header">
					<h5 class="modal-title" id="mdEditGrupoMaterialLabel">
						<i class="fa fa-pencil"></i> &nbsp;&nbsp;<strong>Alterar GrupoMaterial</strong>
					</h5>
				</div>
				@using (@Html.BeginForm("Edit", "GrupoMaterial", FormMethod.Post, new { id = "formEditGrupoMaterial", @class = "form-horizontal", @enctype = "multipart/form-data" }))
				{
                    <div class="modal-body">
                        <input type="hidden" name="editGrupoMaterialId" :value="editDto.Id"/>
                        <div class="form-group row">
                            <label class="col-sm-3 control-label text-sm-right pt-2">Professor <span class="required">*</span></label>
                            <div class="col-sm-5">
                                <select class="form-control populate select2" name="ddlProfessor" id="ddlProfessor" style="width:100%"
                                        required title="Por favor selecione o professor">
                                    <option value="">Selecionar Professor</option>
                                </select>
                            </div>
                            <label class="col-sm-2 control-label text-sm-right pt-2">Carga Horária <span class="required">*</span></label>
                            <div class="col-sm-2">
                                <input type="text" id="cargaHoraria" name="cargaHoraria" class="form-control" maxlength="6"
                                       title="Por favor informe o valor final." required :value="editDto.CargaHoraria"/>
                            </div>
                        </div>
                            <div class="form-group row">
                                <label class="col-sm-3 control-label text-sm-right pt-2">Titulo da GrupoMaterial <span class="required">*</span></label>
                                <div class="col-sm-9">
                                    <input type="text" name="nome" :value="editDto.Titulo" class="form-control"
                                           maxlength="150"
                                           title="Por favor informe o nome do curso." required/>
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-sm-3 control-label text-sm-right pt-2">Descrição </label>
                                <div class="col-sm-9">
                                    <textarea class="form-control" rows="7" maxlength="500" name="descricao" v-model="editDto.Descricao" id="descricao"></textarea>
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-sm-3 control-label text-sm-right pt-2">Video </label>
                                <div class="col-sm-9">
                                    <textarea class="form-control" rows="7" maxlength="500" name="video" v-model="editDto.Video" id="video"></textarea>
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-sm-3 control-label">Material Didático</label>
                                <div class="col-sm-9">
                                    <div class="fileupload fileupload-new" data-provides="fileupload">
                                        <div class="input-append">
                                            <div class="uneditable-input">
                                                <i class="fa fa-file fileupload-exists"></i>
                                                <span class="fileupload-preview">{{ editDto.NomeMaterial }}</span>
                                            </div>
                                            <span class="btn btn-default btn-file">
                                                <span class="fileupload-exists">Alterar</span>
                                                <span class="fileupload-new">Selecionar Arquivo</span>
                                                <input type="file" id="arquivo" name="arquivo" />
                                            </span>
                                            <a href="#" class="btn btn-default fileupload-exists" data-dismiss="fileupload">Remover</a>
                                        </div>
                                        <div v-if="editDto.NomeMaterial" class="mt-2">
										<code>Material Didático atual: {{ editDto.NomeMaterial }}</code>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="form-group row">
                                <label class="col-sm-3 control-label text-sm-right pt-2">Status</label>
                                <div class="col-md-9">
                                    <div class="switch switch-sm switch-primary">
                                        <div v-show="editDto.Status">
                                            <input type="checkbox" id="editStatus" name="editStatus" data-plugin-ios-switch checked="checked"/>
                                        </div>
                                        <div v-show="!editDto.Status">
                                            <input type="checkbox" id="editStatus" name="editStatus" data-plugin-ios-switch/>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
					<div class="modal-footer">
						<button type="reset" class="btn btn-danger pull-right" style="margin-left: 5px;" data-dismiss="modal"><i class="fa fa-remove"></i> &nbsp;&nbsp;Cancelar</button>
						<button type="submit" class="btn btn-success pull-right" style="margin-left: 5px;"><i class="fa fa-save"></i> &nbsp;&nbsp;Salvar</button>
					</div>
				}
			</div>
		</div>
	</div>
</div>

@section CssSpecificVendor {
    <link rel="stylesheet" href="~/assets/vendor/bootstrap-fileupload/bootstrap-fileupload.min.css" />
	<link rel="stylesheet" href="~/assets/vendor/select2/css/select2.css" />
	<link rel="stylesheet" href="~/assets/vendor/select2-bootstrap-theme/select2-bootstrap.min.css" />
	<link rel="stylesheet" href="~/assets/vendor/datatables/media/css/dataTables.bootstrap4.css" />
}
@section Scripts {
    <script src="~/assets/vendor/bootstrap-fileupload/bootstrap-fileupload.min.js"></script>
	<script src="~/assets/vendor/select2/js/select2.js"></script>
	<script src="~/assets/vendor/jquery-validation/jquery.validate.js"></script>
	<script src="~/assets/vendor/jquery-mask/jquery.mask.js"></script>
	<script src="~/assets/vendor/ios7-switch/ios7-switch.js"></script>
	<script src="~/assets/vendor/datatables/media/js/jquery.dataTables.min.js"></script>
	<script src="~/assets/vendor/datatables/media/js/dataTables.bootstrap4.min.js"></script>
	<script src="~/js/formatTable.js"></script>
	<script src="~/js/GrupoMaterial.js"></script>

	<script>

		(function ($) {

			'use strict';
			var crub = @ViewBag.CrudMessage;

			if (crub === 1) {
				new PNotify({
					title: 'Métrica',
					text: 'Cadastro realizado com sucesso!',
					type: 'success'
				});
				crub = 0;
			} else if (crub === 2) {
				new PNotify({
					title: 'Métrica',
					text: 'Dados alterados com sucesso.',
					type: 'warning',
					icon: 'fa fa-pencil'
				});
				crub = 0;
			} else if (crub === 3) {
				new PNotify({
					title: 'Métrica',
					text: 'Registro excluído com sucesso.',
					type: 'error',
					icon: 'fa fa-trash-o'
				});
				crub = 0;
			}


			var notify = @ViewBag.NotifyMessage;
			var messagem = '@ViewBag.Notify';

			if (notify === 0) {
				new PNotify({
					title: 'Métrica',
					text: messagem,
					type: 'success'
				});
				crub = 0;
			} else if (notify === 1) {
				new PNotify({
					title: 'Métrica',
					text: messagem,
					type: 'warning'
				});
				crub = 0;
			} else if (notify === 2) {
				new PNotify({
					title: 'Métrica',
					text: messagem,
					type: 'error'
				});
				crub = 0;
			}

			if ($.isFunction($.fn['tooltip'])) {
				$('[data-toggle=tooltip],[rel=tooltip]').tooltip({ container: 'body' });
			}

		}).apply(this, [jQuery]);
	</script>
}



