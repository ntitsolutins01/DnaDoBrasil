@model ControleMaterialEstoqueSaidaModel
@{
    ViewData["Title"] = "Inclusão de Registro de Entrada/Saida";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div id="vControleMaterialEstoqueSaida">
    <div class="row">
        <div class="col-md-12">
            @using (@Html.BeginForm("Create", "ControleMaterialEstoqueSaida", FormMethod.Post, new { id = "formControleMaterialEstoqueSaida", @class = "form-horizontal" }))

            {
                <section class="panel">
                    <header class="panel-heading">
                        <div class="panel-actions">
                            <a href="#" class="panel-action panel-action-toggle" data-panel-toggle></a>
                        </div>

                        <h2 class="panel-title">Cadastro de Registro de Entrada/Saida</h2>
                    </header>
                    <div class="panel-body">
                        <div class="form-group row">
                            <label class="col-sm-3 control-label text-sm-right pt-2">Tipo de Material <span class="required">*</span></label>
                            <div class="col-sm-4">
                                <select class="form-control populate select2" name="ddlTipoMaterial" id="ddlTipoMaterial" style="width:100%"
                                        required title="Por favor selecione o tipo de material"
                                        asp-for="TipoMaterialId" asp-items="Model.ListTiposMateriais">
                                    <option value="">Selecionar Tipo de Material</option>
                                </select>
                            </div>
                            <label class="col-sm-1 control-label text-sm-right pt-2">Material <span class="required">*</span></label>
                            <div class="col-sm-4">
                                <select class="form-control populate select2" name="ddlMaterial" id="ddlMaterial" style="width:100%"
                                        required title="Por favor selecione o material"
                                        asp-for="MaterialId" asp-items="Model.ListMateriais">
                                    <option value="">Selecionar Material</option>
                                </select>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-sm-3 control-label text-sm-right pt-2">Solicitante </label>
                            <div class="col-sm-5">
                                <input type="text" id="solicitante" name="solicitante" class="form-control" maxlength="150"/>
                            </div>
                            <label class="col-sm-2 control-label text-sm-right pt-2">Quantidade <span class="required">*</span></label>
                            <div class="col-sm-2">
                                <input type="number" id="quantidade" name="quantidade" class="form-control" maxlength="6"
                                       title="Por favor informe a quantidade." required />
                            </div>
                        </div>
                    </div>
                    <footer class="panel-footer">
                        <div class="row">
                            <div class="col-md-9 col-md-offset-3">
                                <a href="@Url.Action("Index", "ControleMaterialEstoqueSaida")" class="btn btn-dark pull-right" style="margin-left: 5px;margin-right: 5px;"><i class="fa fa-reply"></i> &nbsp;&nbsp;Voltar</a>
                                <button type="reset" class="btn btn-danger pull-right" style="margin-left: 5px;"><i class="fa fa-remove"></i> &nbsp;&nbsp;Cancelar</button>
                                <button type="submit" class="btn btn-success pull-right" style="margin-left: 5px;"><i class="fa fa-save"></i> &nbsp;&nbsp;Salvar</button>
                            </div>
                        </div>
                    </footer>
                </section>
            }
        </div>
    </div>
</div>
@section CssSpecificVendor {
    <link rel="stylesheet" href="~/assets/vendor/select2/css/select2.css" />
    <link rel="stylesheet" href="~/assets/vendor/select2-bootstrap-theme/select2-bootstrap.min.css" />
}
@section Scripts {
    <script src="~/assets/vendor/select2/js/select2.js"></script>
    <script src="~/assets/vendor/jquery-validation/jquery.validate.js"></script>
    <script src="~/assets/vendor/jquery-mask/jquery.mask.js"></script>
    <script src="~/js/ControleMaterialEstoqueSaida.js"></script>
    <script>

        (function ($) {

            'use strict';
            var crud = @ViewBag.CrudMessage;

            if (crud === 1) {
                new PNotify({
                    title: 'Registro de Estoque',
                    text: 'Cadastro realizado com sucesso!',
                    type: 'success'
                });
            } else if (crud === 2) {
                new PNotify({
                    title: 'Registro de Estoque',
                    text: 'Dados alterados com sucesso.',
                    type: 'warning'
                });
            } else if (crud === 3) {
                new PNotify({
                    title: 'Registro de Estoque',
                    text: 'Registro excluído com sucesso.',
                    type: 'error'
                });
            }

            var notify = @ViewBag.NotifyMessage;
            var messagem = '@ViewBag.Notify';

            if (notify === 0) {
                new PNotify({
                    title: 'Registro de Estoque',
                    text: messagem,
                    type: 'success'
                });
            } else if (notify === 1) {
                new PNotify({
                    title: 'Registro de Estoque',
                    text: messagem,
                    type: 'warning'
                });
            } else if (notify === 2) {
                new PNotify({
                    title: 'Registro de Estoque',
                    text: messagem,
                    type: 'error'
                });
            }

        }).apply(this, [jQuery]);

    </script>
}