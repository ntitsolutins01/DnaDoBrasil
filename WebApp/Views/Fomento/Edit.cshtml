@model FomentoModel
@{
	ViewData["Title"] = "Alteração de Fomento";
	Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
	<div class="col-md-12">
		@using (@Html.BeginForm("Edit", "Fomento", FormMethod.Post, new { id = "formEditFomento", @class = "form-horizontal" }))
		{
			<section class="panel">
				<header class="panel-heading">
					<div class="panel-actions">
						<a href="#" class="panel-action panel-action-toggle" data-panel-toggle></a>
					</div>
					<h2 class="panel-title">Alteração de Fomento</h2>
				</header>
				<div class="panel-body">
					<div class="form-group row">
						<label class="col-sm-2 control-label text-sm-right pt-2">Código <span class="required">*</span></label>
						<div class="col-sm-3">
							<input type="text" name="codigo" class="form-control"
								   maxlength="50" value="@Model.Fomento.Codigo"
								   title="Por favor informe o código do fomento." required />
						</div>
					</div>
					<div class="form-group row">
						<label class="col-sm-2 control-label text-sm-right pt-2">Fomento <span class="required">*</span></label>
						<div class="col-sm-10">
							<input type="text" name="nome" class="form-control"
								   maxlength="80" value="@Model.Fomento.Nome"
								   title="Por favor informe o fomento." required />
						</div>
					</div>
					<div class="form-group row">
						<label class="col-sm-2 control-label text-sm-right pt-2">Estado <span class="required">*</span></label>
						<div class="col-md-4">
							<select class="form-control populate select2" name="ddlEstado" id="ddlEstado"
									title="Por favor informe o estado." required
									asp-for="EstadoId" asp-items="Model.ListEstados">
								<option value="">Selecionar Estado</option>
							</select>
						</div>
						<label class="col-sm-1 control-label text-sm-right pt-2">Municipio <span class="required">*</span></label>
						<div class="col-md-5">
							<select class="form-control populate select2" name="ddlMunicipio" id="ddlMunicipio"
									title="Por favor informe o municipio." required
									asp-for="MunicipioId" asp-items="Model.ListMunicipios">
								<option value="">Selecionar Municipio</option>
							</select>
						</div>
					</div>
					<div class="form-group row">
						<label class="col-sm-2 control-label text-sm-right pt-2">Localidade <span class="required">*</span></label>
						<div class="col-md-3">
							<select class="form-control populate select2" name="ddlLocalidade" id="ddlLocalidade"
									title="Por favor informe o localidade." required
									asp-for="LocalidadeId" asp-items="Model.ListLocalidades">
								<option value="">Selecionar Localidade</option>
							</select>
						</div>
						<label class="col-sm-2 control-label text-sm-right pt-2">Linha de Ação<span class="required">*</span></label>
						<div class="col-md-5">
							<select class="form-control" multiple="multiple" data-plugin-multiselect data-plugin-options='{ "maxHeight": 200, "enableCaseInsensitiveFiltering": true }'
									name="ddlLinhaAcao" id="ddlLinhaAcao"
									title="Por favor informe a linha de ação." required style="width:100%"
									asp-for="LinhaAcaoId" asp-items="Model.ListLinhasAcoes">
							</select>
						</div>
					</div>
					<div class="form-group row">
						<label class="col-sm-2 control-label text-sm-right pt-2">Data de Início <span class="required">*</span></label>
						<div class="col-sm-3">
							<div class="input-group">
								<span class="input-group-addon">
									<i class="fa fa-calendar"></i>
								</span>
								<input id="dtIni" name="dtIni"
									   required value="@Model.Fomento.DtIni"
									   title="Por favor informe a data de início."
									   style="z-index: auto;"
									   data-plugin-datepicker data-date-format="dd/mm/yyyy" data-plugin-options='{"language": "pt-BR"}'
									   placeholder="__/__/____" class="form-control startdate"
									   class="form-control">
							</div>
						</div>
                        <div class="form-group row">
                            <label class="col-sm-2 control-label text-sm-right pt-2">Data de Fim <span class="required">*</span></label>
                            <div class="col-sm-3">
                                <div class="input-group">
                                    <span class="input-group-addon">
                                        <i class="fa fa-calendar"></i>
                                    </span>
                                    <input id="dtFim" name="dtFim"
                                           required value="@Model.Fomento.DtFim"
                                           title="Por favor informe a data de fim."
                                           style="z-index: auto;"
                                           data-plugin-datepicker data-date-format="dd/mm/yyyy" data-plugin-options='{"language": "pt-BR"}'
                                           placeholder="__/__/____" class="form-control startdate"
                                           class="form-control">
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-2 control-label pull-left">Status</label>
                            <div class="col-sm-1">
                                <div class="switch switch-sm switch-success">
                                    <input type="checkbox" id="status" name="status" data-plugin-ios-switch @(Model.Fomento.Status == true ? "checked" : "") />
                                </div>
                            </div>
                        </div>
					</div>

					@* <div class="form-group">
						<label class="col-sm-1 control-label">&nbsp;&nbsp; </label>
						<div class="col-sm-12">
							<blockquote class="info">
								<strong>Listagem de profissionais</strong>
							</blockquote>
						</div>
					</div>
					<div class="form-group">
						<label class="col-sm-2 control-label">Vinculados</label>
						<div class="col-sm-10">
							<table class="table table-bordered table-striped mb-0" id="datatable-default">
								<thead>
									<tr>
										<th>Id</th>
										<th>Nome Profissional</th>
									</tr>
								</thead>
							</table>

						</div>
					</div> *@
				</div>
				<footer class="panel-footer">
					<div class="row">
						<div class="col-md-9 col-md-offset-3">
							<a href="@Url.Action("Index", "Fomento")" class="btn btn-dark pull-right" style="margin-left: 5px;margin-right: 5px;"><i class="fa fa-reply"></i> &nbsp;&nbsp;Voltar</a>
							<button type="reset" class="btn btn-danger pull-right" style="margin-left: 5px;"><i class="fa fa-remove"></i> &nbsp;&nbsp;Cancelar</button>
							<button type="submit" class="btn btn-success pull-right" style="margin-left: 5px;"><i class="fa fa-save"></i> &nbsp;&nbsp;Salvar</button>
						</div>
					</div>
				</footer>
			</section>
		}
	</div>
</div>



@section CssSpecificVendor {
	<link rel="stylesheet" href="~/assets/vendor/select2/css/select2.css" />
	<link rel="stylesheet" href="~/assets/vendor/select2-bootstrap-theme/select2-bootstrap.min.css" />
	<link rel="stylesheet" href="~/assets/vendor/bootstrap-multiselect/bootstrap-multiselect.css" />
	<link rel="stylesheet" href="~/assets/vendor/datatables/media/css/dataTables.bootstrap4.css" />
	<link href="~/assets/vendor/bootstrap-datepicker/css/bootstrap-datepicker3.css" rel="stylesheet" />
}
@section Scripts {
	<script src="~/assets/vendor/ios7-switch/ios7-switch.js"></script>
	<script src="~/assets/vendor/jquery-validation/jquery.validate.js"></script>
	<script src="~/assets/vendor/datatables/media/js/jquery.dataTables.min.js"></script>
	<script src="~/assets/vendor/datatables/media/js/dataTables.bootstrap4.min.js"></script>
	<script src="~/assets/vendor/bootstrap-datepicker/js/bootstrap-datepicker.js"></script>
	<script src="~/assets/vendor/bootstrap-datepicker/locales/bootstrap-datepicker.pt-BR.min.js"></script>
	<script src="~/assets/vendor/jquery-mask/jquery.mask.js"></script>
	<script src="~/assets/vendor/select2/js/select2.js"></script>
	<script src="~/js/formatTable.js"></script>
	<script src="~/js/fomento.js"></script>
	<script>

		(function ($) {

			'use strict';

			// Set the value
			$("#ddlLinhaAcao").val(@Model.Fomento.LinhaAcoes);

			// Then refresh
			$("#ddlLinhaAcao").multiselect("refresh");

			var crud = @ViewBag.CrudMessage;

			if (crud === 1) {
				new PNotify({
					title: 'Fomento',
					text: 'Cadastro realizado com sucesso!',
					type: 'success'
				});
			} else if (crud === 2) {
				new PNotify({
					title: 'Fomento',
					text: 'Dados alterados com sucesso.',
					type: 'warning'
				});
			} else if (crud === 3) {
				new PNotify({
					title: 'Fomento',
					text: 'Registro excluído com sucesso.',
					type: 'error'
				});
			}

			var notify = @ViewBag.NotifyMessage;
			var messagem = '@ViewBag.Notify';

			if (notify === 0) {
				new PNotify({
					title: 'Fomento',
					text: messagem,
					type: 'success'
				});
			} else if (notify === 1) {
				new PNotify({
					title: 'Fomento',
					text: messagem,
					type: 'warning'
				});
			} else if (notify === 2) {
				new PNotify({
					title: 'Fomento',
					text: messagem,
					type: 'error'
				});
			}

		}).apply(this, [jQuery]);

	</script>
}