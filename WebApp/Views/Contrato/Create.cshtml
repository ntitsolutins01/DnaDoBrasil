

@{
	ViewData["Title"] = "Inclusão de Contrato";
	Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
	<div class="col-md-12">
		@using (@Html.BeginForm("Create", "Contrato", FormMethod.Post, new { id = "formContrato", @class = "form-horizontal" }))
		{
			<section class="panel">
				<header class="panel-heading">
					<div class="panel-actions">
						<a href="#" class="panel-action panel-action-toggle" data-panel-toggle></a>
					</div>

					<h2 class="panel-title">Cadastro de Contrato</h2>
				</header>
				<div class="panel-body">

					<div class="form-group row">
						<label class="col-sm-3 control-label text-sm-right pt-2"> Nome do Contrato <span class="required">*</span></label>
						<div class="col-sm-9">
							<input type="text" name="nome" class="form-control"
								   maxlength="50" style="text-transform:uppercase"
								   title="Por favor informe o nome do contrato." required />
						</div>
					</div>
					<div class="form-group row">
						<label class="col-sm-3 control-label text-sm-right pt-2">Descrição <span class="required">*</span></label>
						<div class="col-sm-9">
							<input type="text" name="descricao" class="form-control"
								   maxlength="100" title="Por favor informe a descrição." required />
						</div>
					</div>
					<div class="form-group row">
						<label class="col-sm-3 control-label text-sm-right pt-2">Data de Início <span class="required">*</span></label>
						<div class="col-sm-3">
							<div class="input-group">
								<span class="input-group-addon">
									<i class="fa fa-calendar"></i>
								</span>
								<input id="dtIni" name="dtIni"
								       required
								       title="Por favor informe a data de início."
								       style="z-index: auto;"
								       data-plugin-datepicker data-date-format="dd/mm/yyyy" data-plugin-options='{"language": "pt-BR"}'
								       placeholder="__/__/____" class="form-control startdate"
								       class="form-control">
							</div>
						</div>
						<label class="col-sm-3 control-label text-sm-right pt-2">Data de Fim <span class="required">*</span></label>
						<div class="col-sm-3">
							<div class="input-group">
								<span class="input-group-addon">
									<i class="fa fa-calendar"></i>
								</span>
								<input id="dtFim" name="dtFim"
								       required
								       title="Por favor informe a data de fim."
								       style="z-index: auto;"
								       data-plugin-datepicker data-date-format="dd/mm/yyyy" data-plugin-options='{"language": "pt-BR"}'
								       placeholder="__/__/____" class="form-control startdate"
								       class="form-control">
							</div>
						</div>
					</div>
					<div class="form-group row">
						<label class="col-sm-3 control-label text-sm-right pt-2">Anexo <span class="required">*</span></label>
						<div class="col-sm-9">
							<div class="fileupload fileupload-new" data-provides="fileupload">
								<div class="input-append">
									<div class="uneditable-input">
										<i class="fa fa-file fileupload-exists"></i>
										<span class="fileupload-preview"></span>
									</div>
									<span class="btn btn-default btn-file">
										<span class="fileupload-exists">Change</span>
										<span class="fileupload-new">Select file</span>
										<input type="file" />
									</span>
									<a href="#" class="btn btn-default fileupload-exists" data-dismiss="fileupload">Remove</a>
								</div>
							</div>
						</div>
					</div>
				</div>
				<footer class="panel-footer">
					<div class="row">
						<div class="col-md-9 col-md-offset-3">
							<a href="@Url.Action("Index", "Contrato")" class="btn btn-dark pull-right" style="margin-left: 5px;margin-right: 5px;"><i class="fa fa-reply"></i> &nbsp;&nbsp;Voltar</a>
							<button type="reset" class="btn btn-danger pull-right" style="margin-left: 5px;"><i class="fa fa-remove"></i> &nbsp;&nbsp;Cancelar</button>
							<button type="submit" class="btn btn-success pull-right" style="margin-left: 5px;"><i class="fa fa-save"></i> &nbsp;&nbsp;Salvar</button>
						</div>
					</div>
				</footer>
			</section>
		}
	</div>
</div>
@section CssSpecificVendor {
    <link rel="stylesheet" href="~/assets/vendor/bootstrap-fileupload/bootstrap-fileupload.min.css" />
    <link href="~/assets/vendor/bootstrap-datepicker/css/bootstrap-datepicker3.css" rel="stylesheet" />
}
@section Scripts {
	<script src="~/assets/vendor/jquery-validation/jquery.validate.js"></script>
	<script src="~/assets/vendor/select2/js/select2.js"></script>
	<script src="~/assets/vendor/jquery-mask/jquery.mask.js"></script>
	<script src="~/assets/vendor/bootstrap-fileupload/bootstrap-fileupload.min.js"></script>
	<script src="~/js/Contrato.js"></script>
	<script>

		(function ($) {

			'use strict';
			var crud = @ViewBag.CrudMessage;

			if (crud === 1) {
				new PNotify({
					title: 'Contrato',
					text: 'Cadastro realizado com sucesso!',
					type: 'success'
				});
			} else if (crud === 2) {
				new PNotify({
					title: 'Contrato',
					text: 'Dados alterados com sucesso.',
					type: 'warning'
				});
			} else if (crud === 3) {
				new PNotify({
					title: 'Contrato',
					text: 'Registro excluído com sucesso.',
					type: 'error'
				});
			}

			var notify = @ViewBag.NotifyMessage;
			var messagem = '@ViewBag.Notify';

			if (notify === 0) {
				new PNotify({
					title: 'Contrato',
					text: messagem,
					type: 'success'
				});
			} else if (notify === 1) {
				new PNotify({
					title: 'Contrato',
					text: messagem,
					type: 'warning'
				});
			} else if (notify === 2) {
				new PNotify({
					title: 'Contrato',
					text: messagem,
					type: 'error'
				});
			}

		}).apply(this, [jQuery]);

	</script>
}