@model CategoriaModel
@{
	ViewData["Title"] = "Inclusão de Categoria";
	Layout = "~/Views/Shared/_Layout.cshtml";
}

<div id="vCategoria">
	<div class="row">
		<div class="col-md-12">
			@using (@Html.BeginForm("Create", "Categoria", FormMethod.Post, new { id = "formCategoria", @class = "form-horizontal" }))
			{
				<section class="panel">
					<header class="panel-heading">
						<div class="panel-actions">
							<a href="#" class="panel-action panel-action-toggle" data-panel-toggle></a>
						</div>
						<h2 class="panel-title">Cadastro de Categoria</h2>
					</header>
					<div class="panel-body">
                        
                        <div class="form-group row">
                            <label class="col-sm-2 control-label">Código da Categoria <span class="required">*</span></label>
                            <div class="col-sm-4">
                                <input type="text" name="codigo" id="codigo" class="form-control" 
                                       maxlength="10" oninput="this.value = this.value.toUpperCase()"
                                       title="Por favor informe o código da categoria." required />
                            </div>
                            <label class="col-sm-2 control-label">Nome da Categoria <span class="required">*</span></label>
                            <div class="col-sm-4">
                                <input type="text" name="nome" id="nome" class="form-control" 
                                       maxlength="50" 
                                       title="Por favor informe o nome da Categoria." required />
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-sm-2 control-label">Idade Inicial <span class="required">*</span></label>
                            <div class="col-sm-4">
								<input type="number" name="idadeIni" id="idadeIni" class="form-control"
									   maxlength="3" 
                                       title="Por favor informe o nome da idade inicial." required />
                            </div>
                            <label class="col-sm-2 control-label">Idade Final <span class="required">*</span></label>
                            <div class="col-sm-4">
								<input type="number" name="idadeFim" id="idadeFim" class="form-control"
									   maxlength="3"
                                       title="Por favor informe o nome da idade final." required />
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-sm-2 control-label">Descrição</label>
                            <div class="col-sm-9">
                                <textarea class="form-control" rows="3" maxlength="500" name="descricao" id="descricao"></textarea>
                            </div>
                        </div>
					</div>
					<footer class="panel-footer">
						<div class="row">
							<div class="col-md-9 col-md-offset-3">
								<a href="@Url.Action("Index", "Categoria")" class="btn btn-dark pull-right" style="margin-left: 5px;margin-right: 5px;"><i class="fa fa-reply"></i> &nbsp;&nbsp;Voltar</a>
								<button type="reset" class="btn btn-danger pull-right" style="margin-left: 5px;"><i class="fa fa-remove"></i> &nbsp;&nbsp;Cancelar</button>
								<button type="submit" class="btn btn-success pull-right" style="margin-left: 5px;"><i class="fa fa-save"></i> &nbsp;&nbsp;Salvar</button>
							</div>
						</div>
					</footer>
				</section>

			}
		</div>
	</div>
</div>
@section CssSpecificVendor {
}
@section Scripts {
	<script src="~/assets/vendor/jquery-validation/jquery.validate.js"></script>
	<script src="~/assets/vendor/jquery-mask/jquery.mask.js"></script>
	<script src="~/js/Categoria.js"></script>
	<script>

		(function ($) {

			'use strict';
			var crud = @ViewBag.CrudMessage;

			if (crud === 1) {
				new PNotify({
					title: 'Categoria',
					text: 'Cadastro realizado com sucesso!',
					type: 'success'
				});
			} else if (crud === 2) {
				new PNotify({
					title: 'Categoria',
					text: 'Dados alterados com sucesso.',
					type: 'warning'
				});
			} else if (crud === 3) {
				new PNotify({
					title: 'Categoria',
					text: 'Registro excluído com sucesso.',
					type: 'error'
				});
			}

			var notify = @ViewBag.NotifyMessage;
			var messagem = '@ViewBag.Notify';

			if (notify === 0) {
				new PNotify({
					title: 'Categoria',
					text: messagem,
					type: 'success'
				});
			} else if (notify === 1) {
				new PNotify({
					title: 'Categoria',
					text: messagem,
					type: 'warning'
				});
			} else if (notify === 2) {
				new PNotify({
					title: 'Categoria',
					text: messagem,
					type: 'error'
				});
			}

		}).apply(this, [jQuery]);

	</script>
}