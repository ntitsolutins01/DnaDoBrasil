@model WebApp.Models.UsuarioModel
@{
    ViewData["Title"] = "Inclusão Usuário";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row" id="vUsuario">
    <div class="col-md-12">
        @using (@Html.BeginForm("Create", "Usuario", FormMethod.Post, new { id = "formUsuario", @class = "form-horizontal" }))
        {
            <section class="panel">
                <header class="panel-heading">
                    <div class="panel-actions">
                        <a href="#" class="panel-action panel-action-toggle" data-panel-toggle></a>
                    </div>

                    <h2 class="panel-title">Cadastro de Usuário</h2>
                </header>
                <div class="panel-body">
                    <div id="pUsuario">
                        <div class="form-group row">
                            <label class="col-sm-3 control-label text-sm-right pt-2">Estado <span class="required">*</span></label>
                            <div class="col-md-4">
                                <select class="form-control populate select2" name="ddlEstado" id="ddlEstado"
                                        title="Por favor informe o estado." required
                                        asp-for="EstadoId" asp-items="Model.ListEstados">
                                    <option value="">Selecionar Estado</option>
                                </select>
                            </div>
                            <label class="col-sm-1 control-label text-sm-right pt-2">Municipio <span class="required">*</span></label>
                            <div class="col-md-4">
                                <select class="form-control populate select2" name="ddlMunicipio" id="ddlMunicipio"
                                        title="Por favor informe o municipio." required
                                        asp-for="MunicipioId" asp-items="Model.ListMunicipios">
                                    <option value="">Selecionar Municipio</option>
                                </select>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-sm-3 control-label text-sm-right pt-2">Nome <span class="required">*</span></label>
                            <div class="col-sm-9">
                                <input type="text" name="nome" class="form-control"
                                       maxlength="60"
                                       title="Por favor informe a descrição completa do nome do usuário." required/>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-3 control-label">Tipo Pessoa <span class="required">*</span></label>
                            <div class="col-sm-2">
                                <div class="radio-custom radio-default">
                                    <input id="pf" name="tipoPessoa" type="radio" value="pf" checked
                                           required title="Por favor selecione o tipo pessoa."/>
                                    <label for="tipoPessoa">Pessoa Física</label>
                                </div>
                                <div class="radio-custom radio-info">
                                    <input id="pj" name="tipoPessoa" type="radio" value="pj" required title="Por favor selecione o tipo pessoa."/>
                                    <label for="tipoPessoa">Pessoa Jurídica</label>
                                </div>
                                <label class="error" for="tipoPessoa"></label>
                            </div>
                            <div v-if="params.visible" id="hideCpf">
                                <label class="col-sm-2 control-label">CPF <span class="required">*</span></label>
                                <div class="col-sm-3">
                                    <input id="cpf" name="cpf"
                                           type="text" value="" class="form-control"

                                           title="Por favor informe o cpf do parceiro."
                                           maxlength="14"/>@* v-on:blur="ExisteCpf" *@
                                </div>
                            </div>
                            <div v-if="!params.visible" id="hideCnpj">
                                <label class="col-sm-2 control-label">CNPJ <span class="required">*</span></label>
                                <div class="col-sm-3">
                                    <input id="cnpj" name="cnpj"
                                           type="text" value="" class="form-control"

                                           title="Por favor informe o cnpj do parceiro."
                                           maxlength="19"/>@* v-on:blur="ExisteCpf" *@
                                </div>
                            </div>

                        </div>
                        <div class="form-group row">
                            <label class="col-lg-3 control-label text-sm-right pt-2">E-mail <span class="required">*</span></label>
                            <div class="col-lg-4">
                                <div class="input-group">
                                    <span class="input-group-addon">
                                        <i class="fa fa-envelope"></i>
                                    </span>
                                    <input type="text" id="email" name="email"
                                           v-model="params.email"
                                           class="form-control"
                                           maxlength="40" style="z-index: auto;"
                                           title="Por favor informe um endereço eletrônico válido do usuário" required/>@* v-on:blur="ExisteEmail" *@
                                </div>
                            </div>
                            <label class="col-lg-2 control-label text-sm-right pt-2">Tipo Perfil<span class="required">*</span></label>

                            <div class="col-lg-3">
                                <select class="form-control populate select2" name="ddlPerfil" id="ddlPerfil"
                                        title="Por favor selecione um perfil." required
                                        asp-for="PerfilId" asp-items="Model.ListPerfis">
                                    <option value="">Selecionar Perfil</option>
                                </select>
                            </div>

                        </div>

                    </div>
                </div>
                <footer class="panel-footer">
                    <div class="row">
                        <div class="col-md-9 col-md-offset-3">
                            <a href="@Url.Action("Index", "Usuario")" class="btn btn-dark pull-right" style="margin-left: 5px;margin-right: 5px;"><i class="fa fa-reply"></i> &nbsp;&nbsp;Voltar</a>
                            <button type="submit" class="btn btn-danger pull-right" style="margin-left: 5px;"><i class="fa fa-remove"></i> &nbsp;&nbsp;Cancelar</button>
                            <button type="submit" class="btn btn-success pull-right" style="margin-left: 5px;"><i class="fa fa-save"></i> &nbsp;&nbsp;Salvar</button>
                        </div>
                    </div>
                </footer>
            </section>
        }
    </div>
</div>



@section CssSpecificVendor {
    <link rel="stylesheet" href="~/assets/vendor/select2/css/select2.css" />
    <link rel="stylesheet" href="~/assets/vendor/select2-bootstrap-theme/select2-bootstrap.min.css" />
}
@section Scripts {
    <script src="~/assets/vendor/jquery-validation/jquery.validate.js"></script>
    <script src="~/assets/vendor/select2/js/select2.js"></script>
    <script src="~/assets/vendor/jquery-mask/jquery.mask.js"></script>
    <script src="~/js/usuario.js"></script>
    <script>

        (function ($) {

            'use strict';
            var crud = @ViewBag.CrudMessage;

            if (crud === 1) {
                new PNotify({
                    title: 'Usuário',
                    text: 'Cadastro realizado com sucesso!',
                    type: 'success'
                });
            } else if (crud === 2) {
                new PNotify({
                    title: 'Usuário',
                    text: 'Dados alterados com sucesso.',
                    type: 'warning'
                });
            } else if (crud === 3) {
                new PNotify({
                    title: 'Usuário',
                    text: 'Registro excluído com sucesso.',
                    type: 'error'
                });
            }

            var notify = @ViewBag.NotifyMessage;
            var messagem = '@ViewBag.Notify';

            if (notify === 0) {
                new PNotify({
                    title: 'Usuário',
                    text: messagem,
                    type: 'success'
                });
            } else if (notify === 1) {
                new PNotify({
                    title: 'Usuário',
                    text: messagem,
                    type: 'warning'
                });
            } else if (notify === 2) {
                new PNotify({
                    title: 'Usuário',
                    text: messagem,
                    type: 'error'
                });
            }

        }).apply(this, [jQuery]);

    </script>
}