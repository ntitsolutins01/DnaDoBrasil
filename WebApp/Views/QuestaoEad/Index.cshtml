@model WebApp.Models.QuestaoEadModel
@{
    ViewData["Title"] = "Listagem de Questões";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div id="vQuestaoEad">
    <div class="row">
        <div class="col-lg-12">
            <section class="panel">
                <header class="panel-heading">
                    <div class="panel-actions">
                        <a href="#" class="card-action card-action-toggle" data-card-toggle></a>
                    </div>
                    <h2 class="panel-title">Listagem de Questões</h2>
                </header>
                <div class="panel-body">
                    <div class="form-group row">
                        <div class="col-sm-12 pull-right">
                            <a href="@Url.Action("Create", "QuestaoEad")" id="addToTable" class="btn btn-primary pull-right"><i class="fa fa-plus"></i>&nbsp;&nbsp; Nova Questão </a>
                        </div>
                    </div>
                    <table class="table table-bordered table-striped mb-0" id="datatable-default">
                        <thead>
                            <tr>
                                <th class="text-center">Id</th>
                                <th class="text-center">Aula</th>
                                <th class="text-center">Pergunta</th>
                                <th class="text-center">Questao</th>
                                <th class="text-center">Ações</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.QuestoesEad)
                            {
                                <tr>
                                    <td class="text-center" style="width:20px;">@Html.DisplayFor(modelItem => item.Id)</td>
                                    <td class="text-center" style="width:100px;">@Html.DisplayFor(modelItem => item.NomeAula)</td>
                                    <td class="text-center" style="width:500px;">@Html.DisplayFor(modelItem => item.Pergunta)</td>
                                    <td class="text-center" style="width:20px; !important">@Html.DisplayFor(modelItem => item.Questao)</td>

                                    <td class="actions text-center" style="width: 20px; !important">
                                        <a data-toggle="tooltip" data-placement="top" title="Editar"
                                           href='javascript:(crud.EditModal(@item.Id))'
                                           class="on-default edit-row" style='color: #FF9800'>
                                            <i class="fa fa-pencil"></i>
                                        </a>
                                        <a data-toggle="tooltip" data-placement="top" title="Excluir" href='javascript:(crud.DeleteModal(@item.Id))'
                                           class="on-default remove-row" style="ModuloEad: pointer;color: #F44336"><i class="fa fa-trash"></i></a>
                                    </td>

                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </section>
        </div>
    </div>
    <!-- Modal -->
    <div class="modal fade" id="mdDeleteQuestaoEad" tabindex="-1" role="dialog" aria-labelledby="mdDeleteQuestaoEadLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="mdDeleteQuestaoEadLabel">
                        <i class="fa fa-trash"></i> &nbsp;&nbsp;<strong>Exclusão de Questão</strong>
                    </h5>
                </div>
                <div class="modal-body">
                    <div class="modal-icon">
                        <i class="fa fa-question-circle"></i>
                    </div>
                    <div class="modal-text">
                        <input type="hidden" id="deleteQuestaoEadId" />
                        <p class="mb-0">Tem certeza que deseja <b>excluir</b> esse registro?</p>
                    </div>
                    <div class="modal-wrapper">
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="submit" class="btn btn-danger pull-right" style="margin-left: 5px;" data-dismiss="modal"><i class="fa fa-thumbs-o-down"></i> &nbsp;&nbsp;Não</button>
                    <a id="deleteQuestaoEadHref" class="btn btn-success pull-right" style="margin-left: 5px;"><i class="fa fa-thumbs-o-up"></i> &nbsp;&nbsp;Sim</a>
                </div>
            </div>
        </div>
    </div>
</div>

@section CssSpecificVendor {
    <link rel="stylesheet" href="~/assets/vendor/select2/css/select2.css" />
    <link rel="stylesheet" href="~/assets/vendor/select2-bootstrap-theme/select2-bootstrap.min.css" />
    <link rel="stylesheet" href="~/assets/vendor/datatables/media/css/dataTables.bootstrap4.css" />
}
@section Scripts {
    <script src="~/assets/vendor/select2/js/select2.js"></script>
    <script src="~/assets/vendor/jquery-validation/jquery.validate.js"></script>
    <script src="~/assets/vendor/jquery-mask/jquery.mask.js"></script>
    <script src="~/assets/vendor/ios7-switch/ios7-switch.js"></script>
    <script src="~/assets/vendor/datatables/media/js/jquery.dataTables.min.js"></script>
    <script src="~/assets/vendor/datatables/media/js/dataTables.bootstrap4.min.js"></script>
    <script src="~/js/formatTable.js"></script>
    <script src="~/js/QuestaoEad.js"></script>

    <script>

        (function ($) {

            'use strict';
            var crub = @ViewBag.CrudMessage;

            if (crub === 1) {
                new PNotify({
                    title: 'QuestaoEad',
                    text: 'Cadastro realizado com sucesso!',
                    type: 'success'
                });
                crub = 0;
            } else if (crub === 2) {
                new PNotify({
                    title: 'QuestaoEad',
                    text: 'Dados alterados com sucesso.',
                    type: 'warning',
                    icon: 'fa fa-pencil'
                });
                crub = 0;
            } else if (crub === 3) {
                new PNotify({
                    title: 'QuestaoEad',
                    text: 'Registro excluído com sucesso.',
                    type: 'error',
                    icon: 'fa fa-trash-o'
                });
                crub = 0;
            }


            var notify = @ViewBag.NotifyMessage;
            var messagem = '@ViewBag.Notify';

            if (notify === 0) {
                new PNotify({
                    title: 'QuestaoEad',
                    text: messagem,
                    type: 'success'
                });
                crub = 0;
            } else if (notify === 1) {
                new PNotify({
                    title: 'QuestaoEad',
                    text: messagem,
                    type: 'warning'
                });
                crub = 0;
            } else if (notify === 2) {
                new PNotify({
                    title: 'QuestaoEad',
                    text: messagem,
                    type: 'error'
                });
                crub = 0;
            }

            if ($.isFunction($.fn['tooltip'])) {
                $('[data-toggle=tooltip],[rel=tooltip]').tooltip({ container: 'body' });
            }

        }).apply(this, [jQuery]);
    </script>
}


