@model ProfissionalModel

@{
    ViewData["Title"] = "Inclusão de Profissionais";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div id="vProfissional">
    <div class="row">
        <div class="col-md-12">
            @using (@Html.BeginForm("Create", "Profissional", FormMethod.Post, new { id = "formInclusaoProfissional", @class = "form-horizontal" }))
            {
                <section class="panel">
                    <header class="panel-heading">
                        <div class="panel-actions">
                            <a href="#" class="panel-action panel-action-toggle" data-panel-toggle></a>
                        </div>

                        <h2 class="panel-title">Cadastro de Profissional</h2>
                    </header>
                    <div class="panel-body">
                        <div class="form-group">
                            <label class="col-sm-2 control-label">Nome <span class="required">*</span></label>
                            <div class="col-sm-5">
                                <input type="text" name="nome" id="nome"
                                       maxlength="200" class="form-control" required title="Por favor informe o nome." />
                            </div>
                            <label class="col-sm-1 control-label">Email <span class="required">*</span></label>
                            <div class="col-sm-4">
                                <div class="input-group">
                                    <span class="input-group-addon">
                                        <i class="fa fa-envelope"></i>
                                    </span>
                                    <input type="text" name="email" id="email"
                                           title="Por favor informe um email válido do profissional"
                                           maxlength="100" class="form-control" required />
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-2 control-label">Cpf <span class="required">*</span></label>
                            <div class="col-sm-2">
                                <input id="cpf" name="cpf"
                                       type="text" class="form-control"
                                       maxlength="14" />
                            </div>
                            <label class="col-sm-1 control-label text-sm-right pt-2">Estado <span class="required">*</span></label>
                            <div class="col-md-2">
                                <select class="form-control populate select2" name="ddlEstado" id="ddlEstado"
                                        title="Por favor informe um Estado." required
                                        asp-for="EstadoId" asp-items="Model.ListEstados">
                                    <option value="">Selecionar Estado</option>
                                </select>
                            </div>
                            <label class="col-sm-2 control-label text-sm-right pt-2">Município <span class="required">*</span></label>
                            <div class="col-md-3">
                                <select class="form-control populate select2" name="ddlMunicipio" id="ddlMunicipio"
                                        title="Por favor informe um Municipio." required
                                        asp-for="MunicipioId" asp-items="Model.ListMunicipios">
                                    <option value="">Selecionar Município</option>
                                </select>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-2 control-label text-sm-right pt-2">Localidade <span class="required">*</span> </label>
                            <div class="col-md-3">
                                <select class="form-control populate select2" name="ddlLocalidade" id="ddlLocalidade"
                                        title="Por favor informe a localidade."
                                        asp-for="LocalidadeId" asp-items="Model.ListLocalidades">
                                    <option value="">Selecionar Localidade</option>
                                </select>
                            </div>
                            <label class="col-sm-2 control-label text-sm-right pt-2">Modalidades <span class="required">*</span> </label>
                            <div class="col-md-5">
                                <select class="form-control populate" multiple="multiple" data-plugin-multiselect data-plugin-options='{ "maxHeight": 200, "enableCaseInsensitiveFiltering": true }' 
                                        id="ddlModalidades" name="ddlModalidades" style="width:100%" asp-for="ModalidadeId" asp-items="Model.ListModalidades" required
                                        title="Por favor selecione ao menos uma modalidade.">
                                </select>
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="col-sm-2 control-label">Data Nascimento <span class="required">*</span> </label>
                            <div class="col-sm-3">
                                <div class="input-group">
                                    <span class="input-group-addon">
                                        <i class="fa fa-calendar"></i>
                                    </span>
                                    <input id="DtNascimento" name="DtNascimento"
                                           title="Por favor informe a data de nascimento." required
                                           style="z-index: auto;"
                                           data-plugin-datepicker data-date-format="dd/mm/yyyy" data-plugin-options='{"language": "pt-BR"}'
                                           placeholder="__/__/____" class="form-control startdate"
                                           class="form-control">
                                </div>
                            </div>
                            <label class="col-sm-1 control-label">Sexo <span class="required">*</span></label>
                            <div class="col-sm-3">
                                <select class="form-control populate select2" name="ddlSexo" id="ddlSexo" required
                                        title="Por favor selecione um sexo.">
                                    <option value="">Selecionar Sexo</option>
                                    <option value="M">MASCULINO</option>
                                    <option value="F">FEMININO</option>
                                </select>
                            </div>
                            <label class="col-sm-1 control-label">Cargo</label>
                            <div class="col-sm-2">
                                <input type="text" id="cargo" name="cargo" maxlength="50" class="form-control" />
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-2 control-label">Endereço</label>
                            <div class="col-sm-4">
                                <input type="text" id="endereco" name="endereco" maxlength="200" class="form-control" />
                            </div>
                            <label class="col-sm-1 control-label">Número</label>
                            <div class="col-sm-2">
                                <input type="number" id="numero" name="numero" maxlength="4" class="form-control" />
                            </div>
                            <label class="col-sm-1 control-label">Cep</label>
                            <div class="col-sm-2">
                                <input type="text" id="cep" name="cep" maxlength="9" class="form-control" />
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-2 control-label">Bairro </label>
                            <div class="col-sm-2">
                                <input type="bairro" name="bairro" maxlength="50" class="form-control" />
                            </div>
                            <label class="col-lg-1 control-label text-lg-right pt-2">Telefone</label>
                            <div class="col-lg-3">
                                <div class="input-group">
                                    <span class="input-group-addon">
                                        <i class="fa fa-phone"></i>
                                    </span>
                                    <input id="numTelefone" name="numTelefone" class="form-control"
                                           maxlength="14"
                                           title="Por favor informe o telefone ">
                                </div>
                            </div>
                            <label class="col-sm-1 control-label">Celular </label>
                            <div class="col-sm-3">
                                <div class="input-group">
                                    <span class="input-group-addon">
                                        <i class="fa fa-phone"></i>
                                    </span>
                                    <input id="numCelular" name="numCelular" class="form-control"
                                           maxlength="14"
                                           title="Por favor informe o celular">
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-2 control-label pull-left">Cadastro ativo?</label>
                            <div class="col-sm-1">
                                <div class="switch switch-sm switch-success">
                                    <input type="checkbox" id="status" name="status" data-plugin-ios-switch checked="checked" />
                                </div>
                            </div>
                            <label class="col-sm-2 control-label">Cadastro habilitado?</label>
                            <div class="col-sm-1">
                                <div class="switch switch-sm switch-success">
                                    <input type="checkbox" id="habilitado" name="habilitado" data-plugin-ios-switch />
                                </div>
                            </div>
                        </div>
                        <div style="display:none">
                        <div class="form-group">
                            <label class="col-sm-1 control-label">&nbsp;&nbsp; </label>
                            <div class="col-sm-12">
                                <blockquote class="info">
                                    <strong>Gerenciamento de Grade Horária</strong>
                                </blockquote>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-2 control-label">Aula(s)</label>
                            <div class="col-sm-3">
                                <select class=" populate select2" name="ddlAula" id="ddlAula"
                                        style="width: 100%" title="Por favor selecione a aula.">
                                    @* asp-for="ModalidadeId" asp-items="Model.ListModalidades" *@
                                    <option value="0">Selecionar Aula</option>
                                    <option value="0">Futebol</option>
                                    <option value="0">Capoeira</option>
                                    <option value="0">Reforço Matemática</option>
                                </select>
                            </div>
                            <label class="col-sm-1 control-label">Turno</label>
                            <div class="col-sm-2">
                                <select class=" populate select2" name="ddlTurno" id="ddlTurno"
                                        style="width: 100%" title="Por favor selecione o turno.">
                                    @* asp-for="ModalidadeId" asp-items="Model.ListModalidades" *@
                                    <option value="0">Selecionar Turno</option>
                                    <option value="MATUTINO">MATUTINO</option>
                                    <option value="MATUTINO">VESPERTINO</option>
                                </select>
                            </div>
                            @* <div class="col-sm-2 pull-right">
                        <a data-toggle="modal" data-target="#mdModalidade" class="btn btn-block btn-primary pull-right" style="margin-left: 0.5em;"><i class="fa fa-plus"></i> &nbsp;&nbsp;Novo Modalidade</a>
                        </div> *@
                        </div>
                        <div class="form-group">

                            <label class="col-sm-2 control-label">Dia da semana</label>
                            <div class="col-sm-2">
                                <select class=" populate select2" name="ddlTurno" id="ddlTurno"
                                        style="width: 100%" title="Por favor selecione o turno.">
                                    @* asp-for="ModalidadeId" asp-items="Model.ListModalidades" *@
                                    <option value="0">Selecionar o dia da semana</option>
                                    <option value="MATUTINO">SEG</option>
                                    <option value="MATUTINO">TERC</option>
                                </select>
                            </div>
                            <label class="col-sm-1 control-label">Horário</label>
                            <div class="col-sm-3">
                                <div class="input-group">
                                    <span class="input-group-addon">
                                        <i class="fa fa-clock-o"></i>
                                    </span>
                                    <input id="htIni" name="htIni"
                                           title="Por favor informe a hora início"
                                           style="z-index: auto;"
                                           data-plugin-timepicker data-plugin-options='{"showMeridian": false, "language": "pt-BR"}'
                                           placeholder="__:__" class="form-control">
                                    <span class="input-group-addon">até</span>
                                    <input id="hrFim" name="hrFim"
                                           title="Por favor informe a hora fim."
                                           data-plugin-timepicker data-plugin-options='{"showMeridian": false, "language": "pt-BR"}'
                                           placeholder="__:__" class="form-control">
                                </div>
                            </div>
                        </div>
                        <table class="adicionados table table-bordered table-striped mb-0" id="modalidadeDataTable">
                            <thead>
                                <tr>
                                    <th>Id</th>
                                    <th>Nome Modalidade</th>
                                    <th>Aula</th>
                                    <th>Hora Início</th>
                                    <th>Hora Fim</th>
                                    <th>Turno</th>
                                    <th>Ação</th>
                                </tr>
                            </thead>
                        </table>
                        </div>
                        @* <div class="form-group">
                    <input type="hidden" name="arrModalidadeProfissional" />
                    <label class="col-sm-2 control-label">Adicionados</label>
                    <div class="col-sm-10">

                    </div>
                    </div> *@
                    </div>
                    <footer class="panel-footer">
                        <div class="row">
                            <div class="col-md-9 col-md-offset-3">
                                <button type="submit" class="btn btn-dark pull-right" style="margin-left: 5px;margin-right: 5px;"><i class="fa fa-reply"></i> &nbsp;&nbsp;Voltar</button>
                                <button type="submit" class="btn btn-danger pull-right" style="margin-left: 5px;"><i class="fa fa-remove"></i> &nbsp;&nbsp;Cancelar</button>
                                <button type="submit" class="btn btn-success pull-right" style="margin-left: 5px;"><i class="fa fa-save"></i> &nbsp;&nbsp;Salvar</button>
                            </div>
                        </div>
                    </footer>
                </section>
            }
        </div>
    </div>
    <!-- Modal -->
    <div class="modal fade" id="mdHabilitarProfissional" tabindex="-1" role="dialog" aria-labelledby="mdHabilitarProfissionalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="mdHabilitarProfissionalLabel">
                        <i class="fa fa-check-circle"></i> &nbsp;&nbsp;<strong>Habilitar Profissional</strong>
                    </h5>
                </div>
                @using (@Html.BeginForm("Habilitar", "Profissional", FormMethod.Post, new { id = "formHabilitarProfissional", @class = "form-horizontal" }))
                {
                    <input type="hidden" name="habilitarProfissionalId" :value="editDto.Id" />

                    <div class="modal-body">
                        <div class="form-group row">
                            <label class="col-sm-2 control-label text-sm-right pt-2">Email <span class="required">*</span></label>
                            <div class="col-sm-10">
                                <div class="input-group">
                                    <span class="input-group-addon">
                                        <i class="fa fa-envelope"></i>
                                    </span>
                                    <input type="text" id="email" name="email"
                                           class="form-control"
                                           maxlength="100"
                                           title="Por favor informe um Email válido do profissional." required />
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-danger pull-right" style="margin-left: 5px;" data-dismiss="modal"><i class="fa fa-remove"></i> &nbsp;&nbsp;Cancelar</button>
                        <button type="submit" class="btn btn-success pull-right" style="margin-left: 5px;"><i class="fa fa-save"></i> &nbsp;&nbsp;Salvar</button>
                    </div>
                }
            </div>
        </div>
    </div>
    <!-- Modal -->
    <div class="modal fade" id="mdModalidade" tabindex="-1" role="dialog" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                @using (@Html.BeginForm("CreateModalidade", "Profissional", FormMethod.Post, new { id = "formProfissional", @class = "form-horizontal" }))
                {
                    <div class="modal-header">
                        <h5 class="modal-title"><i class="fa fa-plus"></i> &nbsp;&nbsp;<strong>Novo Modalidade</strong></h5>
                    </div>
                    <div class="modal-body">
                        <div class="form-group">
                            <label class="col-sm-3 control-label">Nome Modalidade<span class="required">*</span></label>
                            <div class="col-sm-9">

                                <input type="text" name="modalidade" name="modalidade" class="form-control" required />
                            </div>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="submit" class="btn btn-danger pull-right" style="margin-left: 5px;" data-dismiss="modal"><i class="fa fa-remove"></i> &nbsp;&nbsp;Cancelar</button>
                        <button type="submit" class="btn btn-success pull-right" style="margin-left: 5px;"><i class="fa fa-save"></i> &nbsp;&nbsp;Salvar</button>
                    </div>
                }
            </div>
        </div>
    </div>
</div>
@section CssSpecificVendor {
    <link rel="stylesheet" href="~/assets/vendor/select2/css/select2.css" />
    <link rel="stylesheet" href="~/assets/vendor/select2-bootstrap-theme/select2-bootstrap.min.css" />
    <link rel="stylesheet" href="~/assets/vendor/bootstrap-multiselect/bootstrap-multiselect.css" />
    <link href="~/assets/vendor/bootstrap-datepicker/css/bootstrap-datepicker3.css" rel="stylesheet" />
}
@section Scripts {
    <script src="~/assets/vendor/jquery-validation/jquery.validate.js"></script>
    <script src="~/assets/vendor/select2/js/select2.js"></script>
    <script src="~/assets/vendor/jquery-mask/jquery.mask.js"></script>
    <script src="~/assets/vendor/ios7-switch/ios7-switch.js"></script>
    <script src="~/assets/vendor/bootstrap-datepicker/js/bootstrap-datepicker.js"></script>
    <script src="~/assets/vendor/bootstrap-datepicker/locales/bootstrap-datepicker.pt-BR.min.js"></script>
    <script src="~/js/profissional.js"></script>
    <script>

        // iosSwitcher
        (function ($) {

            'use strict';

            if (typeof Switch !== 'undefined' && $.isFunction(Switch)) {

                $(function () {
                    $('[data-plugin-ios-switch]').each(function () {
                        var $this = $(this);

                        $this.themePluginIOS7Switch();
                    });
                });

            }

        }).apply(this, [jQuery]);

        (function ($) {

            'use strict';
            var crud = @ViewBag.CrudMessage;

            if (crud === 1) {
                new PNotify({
                    title: 'Resposta',
                    text: 'Cadastro realizado com sucesso!',
                    type: 'success'
                });
            } else if (crud === 2) {
                new PNotify({
                    title: 'Resposta',
                    text: 'Dados alterados com sucesso.',
                    type: 'warning'
                });
            } else if (crud === 3) {
                new PNotify({
                    title: 'Resposta',
                    text: 'Registro excluído com sucesso.',
                    type: 'error'
                });
            }

            var notify = @ViewBag.NotifyMessage;
            var messagem = '@ViewBag.Notify';

            if (notify === 0) {
                new PNotify({
                    title: 'Resposta',
                    text: messagem,
                    type: 'success'
                });
            } else if (notify === 1) {
                new PNotify({
                    title: 'Resposta',
                    text: messagem,
                    type: 'warning'
                });
            } else if (notify === 2) {
                new PNotify({
                    title: 'Resposta',
                    text: messagem,
                    type: 'error'
                });
            }

        }).apply(this, [jQuery]);

    </script>
}



